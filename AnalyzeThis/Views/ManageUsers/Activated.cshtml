@{
    ViewBag.Title = "Activated";
}
<script src="https://cdn.auth0.com/js/lock-7.9.min.js"></script>
<script type="text/javascript">
var lock = new Auth0Lock('@System.Configuration.ConfigurationManager.AppSettings["auth0:ClientId"]', '@System.Configuration.ConfigurationManager.AppSettings["auth0:Domain"]');

    function showLock() {
        lock.show({
            callbackURL: 'http://localhost:53562/LinkUsers.ashx', 
            responseType: 'code', 
            authParams: {
                scope: 'openid profile'
            },
        disableSignupAction:
            true
                });
    }
</script>

<div class="row">
    <div class="col-md-12">
        <h2>Activated.</h2>
        <p>Your account has been activated! You can now <a href="javascript:showLock();">click here to sign in</a>!</p>
    </div>
</div>